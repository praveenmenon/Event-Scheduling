

 <div class="row">
   <div class="col-sm-12">
    <div class="well">
     <%= form_for :event, :url => events_path, :method=> :get,:html => {:class =>"form-horizontal"} do |f| %>
      <!--Venue -->
      <div class="form-group">
       <label for="inputEvent" class="col-sm-3 control-label">Event*</label>
       <div class="col-sm-7">
       <%= f.text_field :event_name,:class =>"form-control", :id=>"event_name",:placeholder => "Event" , readonly: true%>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <!--Venue -->
    <div class="form-group">
     <label for="inputVenue" class="col-sm-3 control-label">Venue</label>
     <div class="col-sm-7">
     <%= f.text_field :venue,:class =>"form-control", :id=>"venue_name",:placeholder => "Venue" %>
    </div>
    <div class="col-sm-2"></div>
  </div>
  <!--Date and Time -->
  <div class="form-group">
   <label for="inputDate" class="col-sm-3 control-label">Date</label>
   <div class="col-sm-3">
    <%= f.text_field :date,:class =>"form-control", :id=>"venue_name",:id =>"datepicker",:placeholder => "Date" %>
  </div>
  <label for="inputTime" class="col-sm-1a control-label">Time</label>
  <div class="col-sm-3">
    <%= f.time_field :time,:class =>"form-control", :id=>"event_time",:placeholder => "Time" %>
  </div>
</div>
<!--Description -->
<div class="form-group">
 <label for="inputescription" class="col-sm-3 control-label">Description</label>
 <div class="col-sm-7">
  <%= f.text_area :description,:size=> "50x7",:class =>"form-control", :id=>"venue_name",:placeholder => "Venue" %>
</div>
<div class="col-sm-2"></div>
</div>
<!--Invitees -->
<div class="form-group">
 <label for="inputescription" class="col-sm-3 control-label">Invitees</label>
 <div class="col-sm-7">
  <table class="table table-responsive table-fixed">
   <thead>
    <tr>
   </tr>
 </thead>
 <tbody style="border-style: solid;border-width: 1px;border-color: #ccc;">
     <% @users=User.all %>
     <% @users.each do |u|%>
     <tr>
      <td><%= check_box_tag "invitees[u][]", u.id %></td>
     
       <td><%=u.name.titleize%></td>
     </tr>
     <%end%>
   </tbody>
</table>
</div>
<div class="col-sm-2"></div>
</div>

<!--Status -->
<div class="form-group">
 <label for="inputstatus" class="col-sm-3 control-label">Status</label>
 <div class="col-sm-3">
  <%= f.select :status, options_for_select([['Open', 'open'], ['Close', 'close']]),{}, {class: 'form-control1'}  %>
</div>
<div class="col-sm-2"></div>
</div>
<%end%>
<div class="modal-footer">
  <%#= f.submit "Ok", :class=>"btn btn-primary ok-btn-padding", :id =>"signup_button"%>
  <button type="button" class="btn btn-default ok-btn-padding" data-dismiss="modal">Cancel</button>
</div>
</div>
</div>
</div>
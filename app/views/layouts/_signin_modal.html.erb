<div  id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Log In</h4>
			</div>
			<%= form_tag sessions_create_path , :class =>"form-horizontal", :id =>"signin_user", :remote=> true, :method=> :get do |f| %>
			<div class="modal-body">
				<div class="form-group">
					<label for="inputEmail" class="col-sm-3 control-label">Email id</label>
					<div class="col-sm-7">
						<%= text_field_tag :email,nil,:class =>"form-control", :id=>"inputEmail",:placeholder => "Email Address" %>    
					</div>
					<div class="col-sm-2"></div>
				</div>
				<div class="form-group">
					<label for="inputPassword" class="col-sm-3 control-label">Password</label>
					<div class="col-sm-7">
						<%= password_field_tag :password,nil,:class =>"form-control", :id=>"inputPassword",:placeholder => "Password" %>
					</div>
					<div class="col-sm-2"></div>
				</div>
			</div>
			<div class="modal-footer">
				<%= submit_tag "Ok", :class=>"btn btn-primary ok-btn-padding", :id =>"signup_button"%>
				<button type="button" class="btn btn-default ok-btn-padding" data-dismiss="modal">Cancel</button>
				<br></br>
				<center><%= link_to "Login with Twitter", "/auth/twitter", id: "sign_in" %></center>
			</div>
			<%end%>
		</div>
	</div>
</div>
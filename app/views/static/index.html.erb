<!--Sign up Modal -->

<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Sign Up</h4>
    </div>
    <%= form_for :user, :url => users_path, :method=> 'post',:html => {:class =>"form-horizontal"} do |f| %>
    <div class="modal-body">

      
      <div class="form-group">
        <%= f.label :Name, :class=>"col-sm-3 control-label" %>
        <div class="col-sm-7">
          <%= f.text_field :name,:class =>"form-control", :id=>"Name",:placeholder => "Name" %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <%= f.label :Email, :class=>"col-sm-3 control-label" %>
        <div class="col-sm-7">
          <%= f.text_field :email,:class =>"form-control", :id=>"Name",:placeholder => "Email" %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <%= f.label :Password, :class=>"col-sm-3 control-label" %>
        <div class="col-sm-7">
          <%= f.password_field :password,:class =>"form-control", :id=>"Name",:placeholder => "Password" %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <%= f.label :Confirm, :class=>"col-sm-3 control-label" %>
        <div class="col-sm-7">
          <%= f.password_field :password_confirmation,:class =>"form-control", :id=>"Name",:placeholder => "Confirm Password" %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      

      
    </div>
    <div class="modal-footer">
      <%= f.submit "Ok", :class=>"btn btn-primary ok-btn-padding"%>
      <button type="button" class="btn btn-default ok-btn-padding" data-dismiss="modal">Cancel</button>
    </div>
    <%end%>
  </div>
</div>
</div>